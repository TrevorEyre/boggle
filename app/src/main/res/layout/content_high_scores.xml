<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#494646">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:showIn="@layout/activity_high_scores"
            tools:context="com.team1.cs410.boggle.HighScoresActivity"
            android:background="#494646"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Score:"
                android:id="@+id/yourScore"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:textColor="#ffffff"
                android:textSize="48dp"
                android:focusable="false"
                android:focusableInTouchMode="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="High Scores"
                android:id="@+id/textView"
                android:layout_below="@id/yourScore"
                android:layout_centerHorizontal="true"
                android:textSize="48dp"
                android:layout_marginTop="32dp"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Player 1"
                android:id="@+id/textname1"
                android:layout_below="@id/textView"
                android:layout_alignLeft="@id/textView"
                android:layout_alignStart="@id/textView"
                android:layout_marginTop="24dp"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/textvalue1"
                android:layout_alignTop="@id/textname1"
                android:layout_alignRight="@id/textView"
                android:layout_alignEnd="@id/textView"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Player 2"
                android:id="@+id/textname2"
                android:layout_below="@id/textname1"
                android:layout_alignLeft="@id/textname1"
                android:layout_alignStart="@id/textname1"
                android:layout_marginTop="16dp"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/textvalue2"
                android:layout_alignTop="@id/textname2"
                android:layout_alignLeft="@id/textvalue1"
                android:layout_alignStart="@id/textvalue1"
                android:textColor="#FFFFFF"
                android:textIsSelectable="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Player 3"
                android:id="@+id/textname3"
                android:layout_below="@id/textname2"
                android:layout_alignLeft="@id/textname2"
                android:layout_alignStart="@id/textname2"
                android:layout_marginTop="16dp"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/textvalue3"
                android:layout_alignBottom="@id/textname3"
                android:layout_alignLeft="@id/textvalue2"
                android:layout_alignStart="@id/textvalue2"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Player 4"
                android:id="@+id/textname4"
                android:layout_below="@id/textname3"
                android:layout_alignLeft="@id/textname3"
                android:layout_alignStart="@id/textname3"
                android:layout_marginTop="16dp"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/textvalue4"
                android:layout_alignTop="@id/textname4"
                android:layout_alignLeft="@id/textvalue3"
                android:layout_alignStart="@id/textvalue3"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Player 5"
                android:id="@+id/textname5"
                android:layout_below="@id/textname4"
                android:layout_alignLeft="@id/textname4"
                android:layout_alignStart="@id/textname4"
                android:layout_marginTop="16dp"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/textvalue5"
                android:layout_alignTop="@id/textname5"
                android:layout_alignLeft="@id/textvalue4"
                android:layout_alignStart="@id/textvalue4"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Words Found"
                android:id="@+id/wordsFoundLabel"
                android:layout_below="@id/textname5"
                android:layout_centerHorizontal="true"
                android:textSize="32dp"
                android:layout_marginTop="32dp"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="..."
                android:id="@+id/wordsFound"
                android:layout_below="@id/wordsFoundLabel"
                android:layout_alignLeft="@id/textname5"
                android:layout_alignStart="@id/textname5"
                android:layout_marginTop="24dp"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Words Not Found"
                android:id="@+id/wordsNotFoundLabel"
                android:layout_below="@id/wordsFound"
                android:layout_centerHorizontal="true"
                android:textSize="32dp"
                android:layout_marginTop="32dp"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="..."
                android:id="@+id/wordsNotFound"
                android:layout_below="@id/wordsNotFoundLabel"
                android:layout_alignLeft="@id/textname5"
                android:layout_alignStart="@id/textname5"
                android:layout_marginTop="24dp"
                android:textColor="#FFFFFF" />

        </RelativeLayout>

    </ScrollView>
</LinearLayout>