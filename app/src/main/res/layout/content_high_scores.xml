<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.team1.cs410.boggle.HighScoresActivity"
    tools:showIn="@layout/activity_high_scores" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/gradient_background"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="64dp"
                android:paddingRight="64dp"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin">

                <TextView
                    android:id="@+id/yourScore"
                    style="@style/scores_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_gravity="center"
                    android:text="@string/yourScore"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/textView"
                    style="@style/scores_header"
                    android:text="@string/high_scores_lbl" />

                <!-- Player 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textname1"
                        style="@style/scores_info"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Player 1" />
                    <TextView
                        android:id="@+id/textvalue1"
                        style="@style/scores_info"
                        android:text="0" />
                </LinearLayout>

                <!-- Player 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textname2"
                        style="@style/scores_info"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Player 2" />
                    <TextView
                        android:id="@+id/textvalue2"
                        style="@style/scores_info"
                        android:text="0" />
                </LinearLayout>

                <!-- Player 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textname3"
                        style="@style/scores_info"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Player 3" />
                    <TextView
                        android:id="@+id/textvalue3"
                        style="@style/scores_info"
                        android:text="0" />
                </LinearLayout>

                <!-- Player 4 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textname4"
                        style="@style/scores_info"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Player 4" />
                    <TextView
                        android:id="@+id/textvalue4"
                        style="@style/scores_info"
                        android:text="0" />
                </LinearLayout>

                <!-- Player 5 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textname5"
                        style="@style/scores_info"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Player 5" />
                    <TextView
                        android:id="@+id/textvalue5"
                        style="@style/scores_info"
                        android:text="0" />
                </LinearLayout>

                <TextView
                    android:id="@+id/wordsFoundLabel"
                    style="@style/scores_header"
                    android:text="@string/words_found_lbl" />

                <TextView
                    android:id="@+id/wordsFound"
                    style="@style/scores_info"
                    android:text="..." />

                <TextView
                    android:id="@+id/wordsNotFoundLabel"
                    style="@style/scores_header"
                    android:text="@string/words_not_found_lbl" />

                <TextView
                    android:id="@+id/wordsNotFound"
                    style="@style/scores_info"
                    android:text="..." />

            </LinearLayout>

        </ScrollView>

        <TextView
            android:id="@+id/menu_back"
            style="@style/menu_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu_back_to_main"/>

    </LinearLayout>

</RelativeLayout>