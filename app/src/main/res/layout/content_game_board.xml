<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.team1.cs410.boggle.GameBoard"
    tools:showIn="@layout/activity_game_board">
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="3:00 "
        android:id="@+id/timer"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:paddingRight="10dip"
        android:layout_alignParentTop="true"
        android:textSize="50dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Word: "
        android:id="@+id/textviewinputword"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:rowCount="5"
        android:columnCount="4"
        android:id="@+id/gridLayout">

        <Button
            android:layout_row="1"
            android:layout_column="0"
            android:text="A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button11"
            android:onClick="boardbuttonclick"/>

        <Button
            android:layout_row="1"
            android:layout_column="1"
            android:text="F"
            android:id="@+id/button12"
            android:onClick="boardbuttonclick"/>
        <Button
            android:layout_row="1"
            android:layout_column="2"
            android:text="Z"
            android:id="@+id/button13"
            android:onClick="boardbuttonclick"/>

        <Button
            android:layout_row="1"
            android:layout_column="3"
            android:text="A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button14"
            android:onClick="boardbuttonclick"/>

        <Button
            android:layout_row="2"
            android:layout_column="0"
            android:text="G"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button21"
            android:onClick="boardbuttonclick"/>

        <Button
            android:layout_row="2"
            android:layout_column="1"
            android:text="K"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button22"
            android:onClick="boardbuttonclick"/>

        <Button
            android:layout_row="2"
            android:layout_column="2"
            android:text="C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button23"
            android:onClick="boardbuttonclick"/>

        <Button
            android:layout_row="2"
            android:layout_column="3"
            android:text="R"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button24"
            android:onClick="boardbuttonclick"/>

        <Button
            android:layout_row="3"
            android:layout_column="0"
            android:text="D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button31"
            android:onClick="boardbuttonclick"/>

        <Button
            android:layout_row="4"
            android:layout_column="0"
            android:text="A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button41"
            android:onClick="boardbuttonclick"/>

        <Button
            android:layout_row="3"
            android:layout_column="1"
            android:text="O"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button32"
            android:onClick="boardbuttonclick"/>

        <Button
            android:layout_row="3"
            android:layout_column="2"
            android:text="A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button33"
            android:onClick="boardbuttonclick"/>

        <Button
            android:layout_row="3"
            android:layout_column="3"
            android:text="T"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button34"
            android:onClick="boardbuttonclick"/>

        <Button
            android:layout_row="4"
            android:layout_column="1"
            android:text="G"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button42"
            android:onClick="boardbuttonclick"/>

        <Button
            android:layout_row="4"
            android:layout_column="2"
            android:text="P"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button43"
            android:onClick="boardbuttonclick"/>

        <Button
            android:layout_row="4"
            android:layout_column="3"
            android:text="A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button44"
            android:onClick="boardbuttonclick"/>
    </GridLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:id="@+id/buttonclear"
        android:onClick="buttonclearclick"
        android:layout_above="@+id/gridLayout"
        android:layout_centerHorizontal="true" />


    <!--android:layout_alignParentTop="false"-->
        <!--android:layout_centerHorizontal="true"-->
</RelativeLayout>
